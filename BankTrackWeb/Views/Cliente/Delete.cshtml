@model Cliente

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h2 class="text-primary text-center mb-4">Eliminar Cliente</h2>
                    <form method="post" asp-action="Delete">
                        <div class="mb-3">
                            <label asp-for="NombreCliente" class="form-label fw-bold"></label>
                            <input asp-for="NombreCliente" class="form-control" placeholder="Ingrese nombre del cliente" readonly/>
                            <span asp-validation-for="NombreCliente" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ApellidoCliente" class="form-label fw-bold"></label>
                            <input asp-for="ApellidoCliente" class="form-control" placeholder="Ingrese apellido del cliente" readonly />
                            <span asp-validation-for="ApellidoCliente" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DireccionCliente" class="form-label fw-bold"></label>
                            <input asp-for="DireccionCliente" class="form-control" placeholder="Ingrese dirección" readonly />
                            <span asp-validation-for="DireccionCliente" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DniCliente" class="form-label fw-bold"></label>
                            <input asp-for="DniCliente" class="form-control" placeholder="Ingrese DNI" readonly />
                            <span asp-validation-for="DniCliente" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger px-4 py-2">Eliminar</button>
                            <a asp-controller="Cliente" asp-action="Index" class="btn btn-secondary px-4 py-2">
                                Volver a la lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}