@model Cliente
@{
    ViewData["PageTitle"] = Model?.IdCliente == 0 ? "Agregar cliente" : "Editar cliente";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h2 class="text-primary text-center mb-4">
                        @if (Model == null || Model.IdCliente == 0)
                        {
                            <text>Agregar Cliente</text>
                        }
                        else
                        {
                            <text>Modificar Cliente</text>
                        }
                    </h2>
                    <form method="post" asp-controller="Cliente" asp-action="CreateOrEdit">
                        <input type="hidden" asp-for="IdCliente" />
                        <div class="mb-3">
                            <label asp-for="NombreCliente" class="form-label fw-bold"></label>
                            <input asp-for="NombreCliente" class="form-control" placeholder="Ingrese nombre del cliente" />
                            <span asp-validation-for="NombreCliente" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ApellidoCliente" class="form-label fw-bold"></label>
                            <input asp-for="ApellidoCliente" class="form-control" placeholder="Ingrese apellido del cliente" />
                            <span asp-validation-for="ApellidoCliente" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DireccionCliente" class="form-label fw-bold"></label>
                            <input asp-for="DireccionCliente" class="form-control" placeholder="Ingrese dirección" />
                            <span asp-validation-for="DireccionCliente" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DniCliente" class="form-label fw-bold"></label>
                            @if (Model!= null && Model.IdCliente != 0)
                            {
                                <!-- Si el cliente ya existe, el campo es de solo lectura -->
                                <input asp-for="DniCliente" class="form-control" placeholder="Ingrese DNI" readonly />
                            }
                            else
                            {
                                <!-- Si se está creando un nuevo cliente, el campo es editable -->
                                <input asp-for="DniCliente" class="form-control" placeholder="Ingrese DNI" />
                            }
                            @* <span asp-validation-for="DniCliente" class="text-danger"></span>
                            <input asp-for="DniCliente" class="form-control" placeholder="Ingrese DNI" />
                            <span asp-validation-for="DniCliente" class="text-danger"></span> *@
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary px-4 py-2">
                                @if (Model == null || Model.IdCliente == 0)
                                {
                                    <text>Crear</text>
                                }
                                else
                                {
                                    <text>Modificar</text>
                                }
                            </button>
                            <a asp-controller="Cliente" asp-action="Index" class="btn btn-secondary px-4 py-2">
                                Volver a la lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



