@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Index";
}
@section Styles {
	<!-- DataTables CSS -->
	<link rel="stylesheet" href="https://cdn.datatables.net/2.1.5/css/dataTables.dataTables.css">
}

<div class="container-fluid px-4">
    <h2 class="text-primary mt-4" >Lista de Clientes</h2>
    <div class="card mb-4">
        <div class="card-body">
            <a asp-controller="Cliente" asp-action="CreateOrEdit" class="btn btn-success">
                <i class="fa-solid fa-circle-plus"></i> &nbsp;Agregar Cliente
            </a>
        </div>
    </div>
    <div class="card mb-4">
<div class="card-body">
<table id="clientes" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Dirección</th>
            <th>DNI</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td>@obj.NombreCliente</td>
				<td>@obj.ApellidoCliente</td>
				<td>@obj.DireccionCliente</td>
				<td>@obj.DniCliente</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Cliente" asp-action="CreateOrEdit" asp-route-id="@obj.IdCliente" class="btn btn-primary mx-2">
                            <i class="fa-regular fa-pen-to-square"></i> &nbsp;Modificar
						</a>
						<a asp-controller="Cliente" asp-action="Delete" asp-route-id="@obj.IdCliente" class="btn btn-danger mx-2">
                            <i class="fa-solid fa-trash"></i> &nbsp;Eliminar
						</a>
					</div>
				</td>
			</tr>
		}
    </tbody>
    <tfoot>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Dirección</th>
            <th>DNI</th>
            <th>Acciones</th>
        </tr>
    </tfoot>
</table>
        </div>
    </div>
</div>

@section Scripts {
	<!-- DataTables JS -->
	<script src="https://cdn.datatables.net/2.1.5/js/dataTables.js"></script>
	<script>
		new DataTable('#clientes');
	</script>
}